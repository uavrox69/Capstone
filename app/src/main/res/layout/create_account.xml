<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sunset_background">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
        android:id="@+id/mem_journal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/main_title"
            android:layout_width="562dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="100dp"
            android:text="Account Creation"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />
            <RelativeLayout
                android:id="@+id/text_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_title">
                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/creation_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/main_title"
                >
                <EditText
                    android:id="@+id/u_name"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/u_name_label"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_below="@+id/u_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/u_name_label"
                    />
                <TextView
                    android:id="@+id/password_label"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_below="@+id/password"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/retype_password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/password_label"
                    />
                <TextView
                    android:id="@+id/r_password_label"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retype Password"
                    android:layout_below="@+id/retype_password"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/r_password_label"
                    />
                <TextView
                    android:id="@+id/email_label"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_below="@+id/email"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <Spinner
                    android:id="@+id/question_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/email_label"
                    />
                <EditText
                    android:id="@+id/s_question_answer"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/question_spinner"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/question_label"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Answer"
                    android:layout_below="@+id/s_question_answer"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
                <Spinner
                    android:id="@+id/question_spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/question_label"
                    />
                <EditText
                    android:id="@+id/s_question_answer2"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Security question"
                    android:background="@android:color/white"
                    android:layout_below="@+id/question_spinner2"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/question_label2"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Answer"
                    android:layout_below="@+id/s_question_answer2"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/main_back_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Back"
                    android:layout_below="@+id/question_label2"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/create_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Create"
                    android:layout_below="@+id/question_label2"
                    android:layout_toRightOf="@+id/main_back_button"/>
                </RelativeLayout>
        </RelativeLayout>
    </HorizontalScrollView>
</ScrollView>

