<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mem_journal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset_background"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/main_title"
        android:layout_width="562dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Account Creation"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_title"
        >
        <EditText
            android:id="@+id/u_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/u_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_below="@+id/u_name"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/u_name_label"
            />
        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_below="@+id/password"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/retype_password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/password_label"
            />
        <TextView
            android:id="@+id/r_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retype Password"
            android:layout_below="@+id/retype_password"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />
        <Spinner
            android:id="@+id/question_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/r_password_label"
            />
        <TextView
            android:id="@+id/s_question_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security question"
            android:layout_below="@+id/question_spinner"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />
        </RelativeLayout>
</RelativeLayout>
